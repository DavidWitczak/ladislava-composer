        {% set image = media_entity.field_media_image.entity %}
        <div class="position-relative">
            <img class="w-100 img-fluid img-ban" src="{{ bamboo_render_image_style(image.fileuri, 'banniere') }}">
            <div class="opcity-ban"></div>
        </div>
        <a href="https://youtu.be/KsZ6rignEO0"
           data-fancybox="teaser"
